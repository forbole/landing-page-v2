{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2017"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@components": [
        "src/components"
      ],
      "@screens/*": [
        "src/screens/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@styles": [
        "src/styles"
      ],
      "@styles/components": [
        "src/styles/components"
      ],
      "@icons": [
        "src/components/icons"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@models": [
        "src/models"
      ],
    }
  },
  "files": [
    "declarations.d.ts"
  ],
  "exclude": [
    "node_modules",
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
  ]
}
